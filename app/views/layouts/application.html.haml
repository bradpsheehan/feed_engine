%html
  %head
    %title FeedEngine
    = stylesheet_link_tag    "application", :media => "all"
    = stylesheet_link_tag "http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #wrap
      =render 'header'
      -if current_user
        #main-container
          =render 'sidebar'
          = yield
      -else
        = yield
    %footer#footer
